    "description": "Validate sales data structure, data types, and business rules",
    "filename": "sales_validation.py",
    "expectations": {
      "description": "Sales data should contain valid transactions with proper data types and reasonable ranges",
      "columns": {
        "date": {
          "type": "string",
          "required": true,
          "null_allowed": false,
          "description": "Transaction date"
        },
        "customer_id": {
          "type": "int64",
          "required": true,
          "min_value": 1,
          "null_allowed": false,
          "description": "Unique customer identifier"
        },
        "product_id": {
          "type": "int64",
          "required": true,
          "min_value": 1,
          "null_allowed": false,
          "description": "Product identifier"
        },
        "amount": {
          "type": "float64",
          "required": true,
          "min_value": 0,
          "max_value": 10000,
          "null_allowed": false,
          "description": "Sale amount in currency"
        },
        "quantity": {
          "type": "int64",
          "required": true,
          "min_value": 1,
          "max_value": 100,
          "null_allowed": false,
          "description": "Quantity sold"
        }
      },
      "expected_row_count": {
        "min": 10,
        "max": 100000
      }
    },
    "category": "validation",
    "dependencies": [
      {
        "type": "uploaded",
        "sourceId": "sales_data"
      }
    ]
  },
